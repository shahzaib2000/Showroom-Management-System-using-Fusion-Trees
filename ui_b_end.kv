WindowManager:
    MainWindow:  #Our main data Window


<MainWindow>:
    name: "data_management"
    headings_col: headings_col
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.6
            size: self.size
            id: c_layout
            orientation: 'vertical'
        
        GridLayout:
            canvas.before:
                Color:
                    rgba: (1, 0.2, 0, .5)
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: headings_col
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 11

        BoxLayout:
            orientation:'vertical'
            #size_hint: 1, 0.5
            canvas.before:
                Color:
                    rgba: (.0, 0.9, .1, .3)
                Rectangle:
                    pos: self.pos
                    size: self.size

            RV:
                id: rv
                viewclass: 'Label'
                SelectableRecycleGridLayout:
                    cols: 11
                    key_selection: 'selectable'
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    multiselect: True
                    touch_multiselect: True
